{
  "hosting": {
    "public": "live-location-web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "node_modules"
    ],
    "headers": [
      {
        "source": "/vendor/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/join/**",
        "destination": "/join.html"
      },
      {
        "source": "/live-location-osm/**",
        "destination": "/osm.html"
      },
      {
        "source": "/owner/**",
        "destination": "/owner.html"
      }
    ]
  }
}
